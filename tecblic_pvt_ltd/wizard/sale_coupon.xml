<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="coupon_generate_view_form" model="ir.ui.view">
        <field name="name">coupon.generate.wizard.form</field>
        <field name="model">sale.coupon</field>
        <field name="arch" type="xml">
            <form string="Generate coupon list">
                <group>
                    <field name="coupon_id"/>
                </group>
                <footer>
                    <button name="apply" string="Apply" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="coupon_benifits_action" model="ir.actions.act_window">
        <field name="name">coupon Wizard</field>
        <field name="res_model">sale.coupon</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="coupon_generate_view_form"/>
    </record>
</odoo>