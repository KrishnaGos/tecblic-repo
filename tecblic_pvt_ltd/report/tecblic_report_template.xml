        <template id="tecblic_header_layout">
            <div class="header">
                <!--                <div class="container">-->
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"/>
                </t>
                <div class="row">
                    <div class="col-6" style="text-align:left;">
                        <strong>
                            <span style="font-size:18px;">Choice Furniture Superstore UK</span>
                        </strong>
                    </div>
                    <div class="col-6" style="text-align:right;">
                        <span t-if="company.street" t-field="company.street"/>
                        <br/>
                        <span t-if="company.street2" t-field="company.street2"/>
                        <br/>
                        <span t-if="company.city" t-field="company.city"/>
                        <span t-if="company.zip" t-field="company.zip"/>,
                        <br/>
                        <span t-if="company.country_id" t-field="company.country_id.name"/>,
                        <span t-if="company.phone" t-field="company.phone"/>
                    </div>
                </div>
            </div>
        </template>

