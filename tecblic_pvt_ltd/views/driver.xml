<?xml version="1.0"?>
<odoo>

    <record id="diver_login_form_view" model="ir.ui.view">
        <field name="name">diver.login.form.view</field>
        <field name="model">diver.login</field>
        <field name="arch" type="xml">
            <form string="Diver login Info">
                <sheet>
                    <group>
                        <field name="driver_id"/>
                        <field name="check_in"/>
                        <field name="check_out"/>
                        <field name="work_hours" string="Work Hours" widget="float_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="diver_login_tree_view" model="ir.ui.view">
        <field name="name">diver.login.tree.view</field>
        <field name="model">diver.login</field>
        <field name="arch" type="xml">
            <tree string="Driver attendances">
                <field name="driver_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="work_hours" string="Work Hours" widget="float_time"/>
            </tree>
        </field>
    </record>

