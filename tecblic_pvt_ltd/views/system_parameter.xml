<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tecblic.dept</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Tecblic Department" string="Tecblic Department"
                     data-key="tecblic_pvt_ltd">
                    <h2>New Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Customer Allowed</span>

                                <!--                                <div class="text-muted content-group mt16">-->
                                <field name="allowed_warehouse" class="text-center oe_inline"/>
                                <!--                                </div>-->
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <menuitem
            name="System Parameter"
            id="menu_tecblic_system_para"
            parent="menu_tecblic_configuration"
            action="action_tecblic_general_config"
            sequence="19"/>

    <record id="allowed_warehouse_parameter" model="ir.config_parameter">
        <field name="key">allowed_warehouse</field>
        <field name="value">2,5,9</field>
    </record>
</odoo>