<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="customer_info_graph_view" model="ir.ui.view">
        <field name="name">customer.graph</field>
        <field name="model">customer.info.details</field>
        <field name="arch" type="xml">
            <graph string=" Customer Activities Analysis">
                <field name="name"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="customer_pivot_view" model="ir.ui.view">
        <field name="name">customer.pivot</field>
        <field name="model">customer.info.details</field>
        <field name="arch" type="xml">
            <pivot string="Customer Pivot View">
                <field name="name" type="row"/>
                <field name="scheduled_date" type="col" interval="day"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="customer_info_calendar_view">
        <field name="name">customer.info.calendar</field>
        <field name="model">customer.info.details</field>
        <field name="arch" type="xml">
            <calendar string="Customer Calendar"
                      date_start="scheduled_date"
                      color="name"
                      mode="month"
                      event_open_popup="true"
                      quick_add="True">
                <field name="name"/>
                <field name="surname"/>
                <field name="customer_email"/>
            </calendar>
        </field>
    </record>

    <record id="customer_kanban_view" model="ir.ui.view">
        <field name="name">customer.info.kanban</field>
        <field name="model">customer.info.details</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="id"/>
                <field name="name"/>
                <field name="surname"/>
                <field name="age"/>
                <field name="customer_email"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Avatar"
                                     t-att-src="kanban_image('customer.info.details', 'image',record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div t-if="record.surname.value">
                                    <t t-esc="record.surname.value"/>
                                </div>
                                <div t-if="record.age.value">
                                    <t t-esc="record.age.value"/>
                                </div>
                                <div t-if="record.customer_email.value">
                                    <t t-esc="record.customer_email.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="customer_view_form" model="ir.ui.view">
        <field name="name">customer.info.form</field>
        <field name="model">customer.info.details</field>
        <field name="arch" type="xml">
            <form string="Customer Info">
                <header>
                    <button name="action_email_leads" type="object"
                            string="Email"
                            class="oe_highlight"
                            attrs="{'invisible': [('surname', '=', False)]}"/>
                    <field name="status" widget="statusbar" class="oe_highlight"/>
                    <button name="do_resigned" type="object" string="Resigned" class="oe_highlight"
                            attrs="{'invisible': [('status', '!=', 'active') ]}"/>

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_appointment_count" type="object" icon="fa-calendar" class="oe_stat_button">
                            <field name="appointment_count" widget="statinfo" string="Models"/>
                        </button>
                    </div>

                    <h1>
                        <field name="seq_name"/>
                    </h1>
                    <group>
                        <field name="image" widget="image" class="oe_avatar" options="{'size': [90, 90]}"/>
                        <group>
                            <field name="name"/>
                            <field name="surname"/>
                            <field name="age"/>
                            <field name="scheduled_date"/>
                            <field name="customer_phone"/>
                            <field name="customer_email" widget='email'/>
                            <field name="amount"/>
                            <field name="coupon_Details"/>
                            <!--                            <field name="user_company"/>-->
                        </group>
                        <group>
                            <field name="customer_address"/>
                            <field name="customer_zip"/>
                            <field name="customer_city"/>
                            <field name="customer_state_id"/>
                            <field name="customer_country_id"/>
                            <field name="salesperson_id"/>
                            <field name="customer_id"/>
                            <field name="customer_sales_id" attrs="{'invisible': [('customer_id', '=', False) ]}"
                                   domain="[('partner_id', '=', customer_id)]"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="customer_tree_view" model="ir.ui.view">
        <field name="name">customer.info.tree.view</field>
        <field name="model">customer.info.details</field>
        <field name="arch" type="xml">
            <tree string="Customer Information">
                <field name="name"/>
                <field name="age"/>
                <field name="customer_phone"/>
                <field name="customer_email"/>
                <field name="customer_state_id"/>
                <field name="customer_country_id"/>
                <field name="salesperson_id"/>
            </tree>
        </field>
    </record>

    <record id="customer_details_action" model="ir.actions.act_window">
        <field name="name">Customer Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">customer.info.details</field>
        <field name="view_mode">tree,form,kanban,calendar,pivot,graph</field>
    </record>

    <menuitem id="customer_menu_root" name="Tecblic">
        <menuitem id="customer_level_menu" name="Customer" action="customer_details_action"/>
    </menuitem>

</odoo>
