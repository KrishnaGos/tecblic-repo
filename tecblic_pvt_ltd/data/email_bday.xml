<odoo>
    <data>
        <record id="bday_email_template" model="mail.template">
            <field name="name">Birthday Reminder</field>
            <field name="model_id" ref="model_hr_employee"/>
            <!--            <field name="auto_delete" eval="True"/>-->
            <field name="email_from">krishna.goswami@tecbliccom</field>
            <field name="email_to">krishnagos252@gmail.com</field>
            <field name="subject">Birthday wishes: ${object.name}</field>
            <field name="body_html">
                <![CDATA[
                    <p>Dear ${(.name)},
                    <br/>
                    Wish You many many happy returns of the day<br/>
                    </p>
                    Regards,<br/>
                    ${(object.company_id.name)}
                ]]>
            </field>
        </record>
    </data>
    <data>
        <record id="email_template" model="mail.template">
            <field name="name">Email Reminder</field>
            <field name="model_id" ref="model_customer_info_details"/>
            <field name="email_from">krishna.goswami@tecbliccom</field>
            <field name="email_to">{{ ctx.get('customer_email', '')}}</field>
            <!--                    <field name="email_to">{{object.customer_email}}</field> without context add -->
            <!--            <field name="subject">Application of -{{object.customer_email}}</field>  subject:- heading-->
            <field name="subject">Application of offer letter</field>
            <field name="body_html" type="html">
                <p>Dear
                    <t t-out="object.name or ''"></t>
                    <br/>
                    Good job, this is our first e-mail template!
                    <br/>
                    Regards,
                    <br/>
                    <t t-out="object.name"/>
                    Department
                </p>
            </field>
        </record>
    </data>
</odoo>
